<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.wishlist">

    <resultMap id="wishListResultMap" type="com.lookmarket.wishlist.vo.WishListVO">
        <result property="wId" column="w_id"/>
        <result property="gId" column="g_id"/>
        <result property="mId" column="m_id"/>
        <result property="gName" column="g_name"/>
        <result property="gPrice" column="g_price"/>
        <result property="gThumbnail" column="i_filename"/>
    </resultMap>

    <!-- 회원별 찜목록 조회 -->
    <select id="selectWishListByMember" parameterType="string" resultMap="wishListResultMap">
        SELECT w.w_id, w.m_id, g.g_id, g.g_name, g.g_price, gi.i_filename
        FROM wishlist w
        JOIN goods g ON w.g_id = g.g_id
        LEFT JOIN goods_image gi ON g.g_id = gi.g_id
        WHERE w.m_id = #{mId}
        ORDER BY w.w_id DESC
    </select>

    <!-- 찜목록 삭제 -->
    <delete id="deleteWishList" parameterType="int">
        DELETE FROM wishlist WHERE w_id = #{wId}
    </delete>
    
    <!-- 찜 여부 확인 -->
    <select id="isWished" parameterType="map" resultType="int">
        SELECT COUNT(*) 
        FROM wishlist 
        WHERE m_id = #{mId} 
          AND g_id = #{gId}
    </select>

    <!-- 찜 추가 -->
    <insert id="insertWish" parameterType="map">
	    INSERT INTO wishlist (m_id, g_id)
	    VALUES (#{mId}, #{gId})
	</insert>

    <!-- 찜 제거 -->
    <delete id="deleteWish" parameterType="map">
        DELETE FROM wishlist 
        WHERE m_id = #{mId} 
          AND g_id = #{gId}
    </delete>
    
    <!-- 새로고침 찜목록 유지 -->
    <select id="selectWishlistIdsByMember" parameterType="string" resultType="int">
        <![CDATA[
            SELECT g_id
            FROM wishlist
            WHERE m_id = #{mId}
        ]]>
    </select>

</mapper>
